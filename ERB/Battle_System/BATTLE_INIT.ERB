

;전투 시스템 초기화
@BATTLE_INIT
LOCAL = 1
;각 배틀러 슬롯에 캐릭터 할당. 빈 칸이면 -1 할당.
BATTLER_SLOT:0 = MASTER
IF TARGET != -1
	BATTLER_SLOT:LOCAL = TARGET
ELSE
	BATTLER_SLOT:LOCAL = -1
ENDIF
LOCAL++
IF ASSI != -1
	BATTLER_SLOT:LOCAL = ASSI
ELSE
	BATTLER_SLOT:LOCAL = -1
ENDIF
	LOCAL++
FOR COUNT , 0 , 5
	IF ENEMY_SLOT:COUNT != 0
		BATTLER_SLOT:LOCAL = ENEMY_SLOT:COUNT
		
	ELSE
		BATTLER_SLOT:LOCAL = -1
	ENDIF
	LOCAL++
NEXT
CALL SCENE_BATTLE




